<div class="modal movie-modal" v-bind:class="{modalVisible: isMovieModalVisible}">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" v-on:click="closeModal">
        <span aria-hidden="true">&times;</span>
    </button>
    
    <div class="modal-title-container">
        <div class="modal-title">
            {{modalTitle}}
        </div>
    </div>

    <div class="modal-container">
        <div class="form-group">
            <label class="col-label">Title:</label>
            <div class="col-xs-12">
                <input type="text" v-model="title" class="input-field" />
            </div>
            <div class="form-group col-xs-12 error-field" v-if="errors.title">
                <span>{{errors.title}}</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-label">Director:</label>
            <div class="col-xs-12">
                <input type="text" v-model="director" class="input-field" />
            </div>
            <div class="form-group col-xs-12 error-field" v-if="errors.director">
                <span>{{errors.director}}</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-label">Release Date:</label>
            <div class="col-xs-12 date input-group" id="datetimepicker">
                <input type="text" class="input-field" v-model="dateReleased" v-on:blur="dateLoseFocus" data-format="yyyy-MM-dd" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <div class="form-group col-xs-12 error-field" v-if="errors.dateReleased">
                <span>{{errors.dateReleased}}</span>
            </div>
        </div>
        <button class="btn btn-primary custom-btn" v-if="!!buttonText" v-on:click="upsertMovie">{{buttonText}}</button>
        <button class="btn btn-primary custom-btn close-btn" v-else v-on:click="closeModal">Close</button>
    </div>
</div>

